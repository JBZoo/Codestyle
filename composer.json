{
    "name"        : "jbzoo/codestyle",
    "type"        : "library",
    "license"     : "MIT",
    "description" : "Collection of QA tools and JBZoo code standards",
    "keywords"    : ["jbzoo", "php", "qa", "tests", "codestyle", "coding-standard"],

    "authors"     : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"                                  : ">=7.2",

        "psalm/phar"                           : ">=4.11.2",
        "phpmd/phpmd"                          : ">=2.10.1",
        "phpstan/phpstan"                      : ">=1.0.1",
        "phpstan/phpstan-strict-rules"         : ">=1.0.0",
        "povils/phpmnd"                        : ">=2.4.0",
        "squizlabs/php_codesniffer"            : ">=3.6.1",
        "phpcompatibility/php-compatibility"   : ">=9.3.5",
        "phpmetrics/phpmetrics"                : ">=2.7.4",

        "symfony/yaml"                         : ">=4.4.16",
        "symfony/console"                      : ">=4.4.16",
        "nikic/php-parser"                     : ">=4.10.5",

        "jbzoo/composer-diff"                  : "^1.5.1",
        "jbzoo/composer-graph"                 : "^1.3.1",
        "jbzoo/ci-report-converter"            : "^2.5.2",
        "mheap/phpunit-github-actions-printer" : "^1.5.1"
    },

    "require-dev" : {
        "jbzoo/phpunit" : "^4.11.0",
        "jbzoo/utils"   : "^4.5.3"
    },

    "autoload"    : {
        "files" : ["src/php/compatibility.php"]
    },

    "config"      : {
        "optimize-autoloader" : true
    },

    "extra"       : {
        "branch-alias" : {
            "dev-master" : "3.x-dev"
        }
    }
}
