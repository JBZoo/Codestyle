{
    "name"              : "jbzoo/codestyle",
    "type"              : "library",
    "license"           : "MIT",
    "description"       : "Collection of QA tools ans JBZoo code standards",
    "keywords"          : ["php", "phpqa", "tests"],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                                : ">=7.2",

        "vimeo/psalm"                        : "^3.12.1",
        "phpstan/phpstan"                    : "^0.12.32",
        "nette/neon"                         : "^3.1.2",

        "phploc/phploc"                      : "^5.0||^6.0",
        "phpmd/phpmd"                        : "^2.8.2",
        "povils/phpmnd"                      : "^2.2.0",
        "sebastian/phpcpd"                   : "^4.1||^5.0",
        "phan/phan"                          : "^3.0.4",
        "squizlabs/php_codesniffer"          : "^3.5.5",
        "phpcompatibility/php-compatibility" : "^9.3.5",
        "friendsofphp/php-cs-fixer"          : "^2.16.3",

        "sensiolabs/security-checker"        : "^6.0.3",
        "davidrjonas/composer-lock-diff"     : "^1.5.1",
        "maglnet/composer-require-checker"   : "^2.0.0",
        "php-coveralls/php-coveralls"        : "^2.2.0"
    },

    "require-dev"       : {
        "phpbench/phpbench"         : "^0.17.1",
        "roave/security-advisories" : "dev-master",
        "jbzoo/phpunit"             : "4.0.x-dev",
        "jbzoo/utils"               : "4.0.x-dev",
        "jbzoo/composer-graph"      : "1.0.x-dev"
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "2.0.x-dev"
        }
    }
}
