{
    "name"              : "jbzoo/codestyle",
    "type"              : "library",
    "license"           : "MIT",
    "description"       : "Collection of QA tools and JBZoo code standards",
    "keywords"          : ["jbzoo", "php", "qa", "tests", "codestyle", "coding-standard"],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                                : ">=7.2",

        "psalm/phar"                         : ">=4.7.0",
        "phpstan/phpstan"                    : ">=0.12.82",
        "phpstan/phpstan-strict-rules"       : ">=0.12.9",
        "nette/neon"                         : ">=3.2.2",
        "povils/phpmnd"                      : ">=2.4.0",
        "maglnet/composer-require-checker"   : ">=2.0.0",
        "squizlabs/php_codesniffer"          : ">=3.5.8",
        "phpcompatibility/php-compatibility" : ">=9.3.5",
        "phpmetrics/phpmetrics"              : ">=2.7.4",
        "roave/security-advisories"          : "dev-master"
    },

    "require-dev"       : {
        "phpbench/phpbench"    : ">=0.17.1",
        "jbzoo/phpunit"        : "^4.5.0",
        "jbzoo/utils"          : "^4.2.3",
        "jbzoo/composer-graph" : "^1.0.4",
        "jbzoo/composer-diff"  : "^1.1.2",
        "jbzoo/toolbox-ci"     : "^1.3.5"
    },

    "autoload"          : {
        "files" : ["src/php/compatibility.php"]
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
