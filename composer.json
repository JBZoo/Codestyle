{
    "name"          : "jbzoo/codestyle",
    "type"          : "library",
    "license"       : "MIT",
    "description"   : "Collection of QA tools ans JBZoo code standards",
    "keywords"      : ["php", "phpqa", "tests"],

    "authors"       : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"       : {
        "php"                                : ">=7.2",
        "edgedesign/phpqa"                   : "^1.23.3",

        "vimeo/psalm"                        : "^3.11.4",
        "phpstan/phpstan"                    : "^0.12.25",
        "nette/neon"                         : "^3.1.2",

        "phploc/phploc"                      : "^4.0||^5.0||^6.0",
        "phpmd/phpmd"                        : "^2.8.2",
        "povils/phpmnd"                      : "^2.2.0",
        "sebastian/phpcpd"                   : "^4.4||^5.0",
        "phan/phan"                          : "^3.0.0",

        "squizlabs/php_codesniffer"          : "^3.5.5",
        "phpcompatibility/php-compatibility" : "^9.3.5",
        "friendsofphp/php-cs-fixer"          : "^2.16.3",

        "sensiolabs/security-checker"        : "^6.0.3",
        "clue/graph-composer"                : "^1.1.0",
        "davidrjonas/composer-lock-diff"     : "^1.5.1",
        "wapmorgan/php-code-analyzer"        : "^1.0.6",
        "php-coveralls/php-coveralls"        : "^2.2.0"
    },

    "prefer-stable" : true,

    "require-dev"   : {
        "roave/security-advisories" : "dev-master"
    },

    "config"        : {
        "optimize-autoloader" : true
    }
}
