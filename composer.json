{
    "name"        : "jbzoo/codestyle",
    "type"        : "library",
    "license"     : "MIT",
    "description" : "Collection of QA tools ans JBZoo code standards",
    "keywords"    : ["php", "phpqa", "tests"],

    "authors"     : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"                                 : ">=7.2",
        "edgedesign/phpqa"                    : "^1.23.3",
        "twig/twig"                           : "^2.12.5||^3.0",

        "vimeo/psalm"                         : "^3.11.4",
        "phpstan/phpstan"                     : "^0.12.25",
        "nette/neon"                          : "^3.1.2",

        "phploc/phploc"                       : "^5.0||^6.0",
        "phpmd/phpmd"                         : "^2.8.2",
        "povils/phpmnd"                       : "^2.2.0",
        "sebastian/phpcpd"                    : "^4.1||^5.0",
        "phan/phan"                           : "^3.0.0",
        "squizlabs/php_codesniffer"           : "^3.5.5",
        "phpcompatibility/php-compatibility"  : "^9.3.5",
        "friendsofphp/php-cs-fixer"           : "^2.16.3",
        "php-parallel-lint/php-parallel-lint" : "^1.2.0",

        "sensiolabs/security-checker"         : "^6.0.3",
        "davidrjonas/composer-lock-diff"      : "^1.5.1",
        "maglnet/composer-require-checker"    : "^2.0.0",
        "icanhazstring/composer-unused"       : "^0.7.1",
        "innmind/dependency-graph"            : "^1.4||^2.0"
    },

    "require-dev" : {
        "roave/security-advisories"   : "dev-master",
        "jbzoo/phpunit"               : "4.x-dev",
        "php-coveralls/php-coveralls" : "^2.2.0"
    },

    "config"      : {
        "optimize-autoloader" : true
    },

    "extra"       : {
        "branch-alias" : {
            "dev-master" : "4.0-dev"
        }
    }
}
