{
    "name"        : "jbzoo/codestyle",
    "type"        : "library",
    "license"     : "MIT",
    "description" : "Collection of QA tools and JBZoo code standards",
    "keywords"    : ["jbzoo", "php", "qa", "tests", "codestyle", "coding-standard"],

    "authors"     : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"                                  : ">=8.0",

        "vimeo/psalm"                          : ">=4.23.0",
        "phpmd/phpmd"                          : ">=2.12.0",
        "phpstan/phpstan"                      : ">=1.7.10",
        "phpstan/phpstan-strict-rules"         : ">=1.2.3",
        "povils/phpmnd"                        : ">=2.5.0",
        "squizlabs/php_codesniffer"            : ">=3.6.2",
        "phpcompatibility/php-compatibility"   : ">=9.3.5",
        "phpmetrics/phpmetrics"                : ">=2.8.1",

        "symfony/yaml"                         : ">=4.4.16",
        "symfony/console"                      : ">=4.4.16",
        "nikic/php-parser"                     : ">=4.14.0",

        "jbzoo/composer-diff"                  : ">=1.7.0",
        "jbzoo/composer-graph"                 : ">=1.5.0",
        "jbzoo/ci-report-converter"            : ">=2.8.1",
        "mheap/phpunit-github-actions-printer" : ">=1.5.1"
    },

    "require-dev" : {
        "jbzoo/phpunit" : "6.x-dev",
        "jbzoo/utils"   : ">=4.5.5"
    },

    "autoload"    : {
        "files" : ["src/php/compatibility.php"]
    },

    "config"      : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {
            "composer/package-versions-deprecated" : true
        }
    },

    "extra"       : {
        "branch-alias" : {
            "dev-master" : "3.x-dev"
        }
    }
}
