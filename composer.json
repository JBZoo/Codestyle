{
    "name"              : "jbzoo/codestyle",
    "type"              : "library",
    "license"           : "MIT",
    "description"       : "Collection of QA tools and JBZoo code standards",
    "keywords"          : ["jbzoo", "php", "qa", "tests", "codestyle", "coding-standard"],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                                : "^7.2",

        "vimeo/psalm"                        : "^3.12.1",

        "phpstan/phpstan"                    : ">=0.12.32",
        "phpstan/phpstan-strict-rules"       : ">=0.12.3",
        "nette/neon"                         : ">=3.1.2",

        "phploc/phploc"                      : "^5.0||^6.0",
        "phpmd/phpmd"                        : "^2.8.2",
        "povils/phpmnd"                      : "^2.2.0",
        "sebastian/phpcpd"                   : "^4.1||^5.0",
        "phan/phan"                          : "^3.1.0",
        "maglnet/composer-require-checker"   : "^2.0.0",

        "squizlabs/php_codesniffer"          : "^3.5.5",
        "phpcompatibility/php-compatibility" : "^9.3.5",

        "sensiolabs/security-checker"        : "^6.0.3",
        "roave/security-advisories"          : "dev-master",

        "php-coveralls/php-coveralls"        : "^2.2.0"
    },

    "require-dev"       : {
        "phpbench/phpbench"    : "^0.17.1",
        "jbzoo/phpunit"        : "^4.1.1",
        "jbzoo/utils"          : "^4.1.0",
        "jbzoo/composer-graph" : "^1.0.1",
        "jbzoo/composer-diff"  : "^1.1.0"
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
