{
    "name"              : "jbzoo/codestyle",
    "type"              : "library",
    "license"           : "MIT",
    "description"       : "Collection of QA tools and JBZoo code standards",
    "keywords"          : [
        "codestyle",
        "coding-standard",
        "jbzoo",
        "phan",
        "php",
        "php-cs-fixer",
        "phpcompatibility",
        "phpcs",
        "phpmd",
        "phpmetrics",
        "phpstan",
        "phpunit",
        "psalm",
        "qa",
        "tests"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"                                   : "^8.1",

        "vimeo/psalm"                           : ">=5.9.0",
        "phpmd/phpmd"                           : ">=2.13.0",
        "phan/phan"                             : ">=5.4.2",
        "povils/phpmnd"                         : ">=3.1.0",

        "phpstan/phpstan"                       : ">=1.10.14",
        "phpstan/phpstan-strict-rules"          : ">=1.5.1",

        "squizlabs/php_codesniffer"             : ">=3.7.2",

        "phpmetrics/phpmetrics"                 : ">=2.8.2",
        "pdepend/pdepend"                       : ">=2.13.0",

        "symfony/yaml"                          : ">=4.4.16",
        "symfony/console"                       : ">=4.4.16",
        "symfony/finder"                        : ">=4.4.16",
        "nikic/php-parser"                      : ">=4.15.3",

        "friendsofphp/php-cs-fixer"             : ">=3.16.0",
        "kubawerlos/php-cs-fixer-custom-fixers" : ">=3.14.0",

        "jbzoo/data"                            : "7.x-dev"
    },

    "require-dev"       : {
        "jbzoo/phpunit"      : "7.x-dev",
        "jbzoo/utils"        : "7.x-dev",
        "symfony/var-dumper" : ">=4.4.16"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\Codestyle\\" : "src"},
        "files" : ["src/compatibility.php"]
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
